<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="56dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/relativeIn1"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/input1Des"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:text="@string/site_longitude_e"
                app:shapeAppearance="@style/Rounded"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input1"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/input1Des"
                app:shapeAppearance="@style/Rounded" />

            <TextView
                android:id="@+id/longMin"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/input1"
                app:shapeAppearance="@style/Rounded" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeIn2"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeIn1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/input2Des"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:text="@string/site_latitude_n"
                app:shapeAppearance="@style/Rounded"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input2"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/input2Des"
                app:shapeAppearance="@style/Rounded" />

            <TextView
                android:id="@+id/latMin"
                android:layout_width="104dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/input2"
                app:shapeAppearance="@style/Rounded" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeIn3"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/input3Des"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:text="@string/sat_longtude_e_nuse_for_w"
                app:shapeAppearance="@style/Rounded"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/input3"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@+id/input3Des"
                app:shapeAppearance="@style/Rounded" />


        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="@string/select_satellite"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="403dp" />

        <!-- Inside text input layout add
              an auto complete text view
                and make its input type to none-->

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Imageview to show the converted svg file -->


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeIm"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        tools:ignore="MissingConstraints"
        >

        <Button
            android:id="@+id/getLocation"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:background="@color/purple_500"
            android:text="Get Location!"
            android:textColor="@color/white"
            app:shapeAppearance="@style/Rounded" />

        <Button
            android:id="@+id/btncalculate"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/getLocation"
            android:background="#8A2BE3"
            android:text="@string/calculate"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.894"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.393"
            app:shapeAppearance="@style/Rounded" />

        <Button
            android:id="@+id/btnclear"
            android:layout_width="59dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/btncalculate"
            android:elevation="@dimen/cardview_default_radius"
            android:text="C" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeIm"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginBottom="244dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rel1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="126dp"
            android:layout_height="121dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/azimuth4"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/azI"
            android:layout_width="110dp"
            android:layout_height="46dp"
            android:layout_below="@+id/image_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/NEl2" />


        <ImageView
            android:id="@+id/image_view2"
            android:layout_width="126dp"
            android:layout_height="121dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/image_view"
            android:src="@drawable/normalele4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/NEl2"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:layout_below="@+id/image_view2"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="17dp"
            android:layout_toStartOf="@+id/IEl2"
            app:layout_constraintStart_toEndOf="@+id/azI" />

        <ImageView
            android:id="@+id/image_view3"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/image_view2"
            android:src="@drawable/inelev44"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/IEl2"
            android:layout_width="104dp"
            android:layout_height="44dp"
            android:layout_below="@+id/image_view3"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toEndOf="@+id/NEl2" />


    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>